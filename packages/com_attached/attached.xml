<?xml version="1.0" encoding="utf-8"?>
<extension
	version="3.3"
	type="component"
	method="upgrade">
	<name>com_attached</name>
	<author>Bruno Batista</author>
	<creationDate>Nov 2013</creationDate>
	<copyright>Copyright (C) 2014 AtomTech, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>bruno@atomtech.com.br</authorEmail>
	<authorUrl>http://www.atomtech.com.br</authorUrl>
	<version>1.0</version>
	<description>COM_ATTACHED_XML_DESCRIPTION</description>
	<scriptfile />
	<!-- Runs on install. -->
	<install>
		<sql>
			<file
				driver="mysql"
				charset="utf8">sql/install.mysql.utf8.sql</file>
			<file
				driver="postgresql"
				charset="utf8">sql/install.postgresql.utf8.sql</file>
		</sql>
	</install>
	<!-- Runs on uninstall. -->
	<uninstall>
		<sql>
			<file
				driver="mysql"
				charset="utf8">sql/uninstall.mysql.utf8.sql</file>
			<file
				driver="postgresql"
				charset="utf8">sql/uninstall.postgresql.utf8.sql</file>
		</sql>
	</uninstall>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
			<schemapath type="postgresql">sql/updates/postgresql</schemapath>
		</schemas>
	</update>
	<files folder="site">
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<filename>metadata.xml</filename>
		<filename>attached.php</filename>
	</files>
	<administration>
		<menu img="class:attached">com_attached</menu>
		<submenu>
			<!--
				Note that all & must be escaped to &amp;
				for the file to be valid XML and be parsed by the installer.
			-->
			<menu
				link="option=com_attached&amp;view=files"
				view="files"
				img="class:attached-files"
				alt="Attached/Files">com_attached_files</menu>
		</submenu>
		<files folder="admin">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>attached.php</filename>
			<folder>controllers</folder>
			<folder>help</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
		<languages folder="admin">
			<language tag="pt-BR">language/pt-BR/pt-BR.com_attached.ini</language>
			<language tag="pt-BR">language/pt-BR/pt-BR.com_attached.sys.ini</language>
		</languages>
	</administration>
	<!--
		These are used for backups to determine which tables to backup;
		ones marked optional are only backed up if they exist.
	-->
	<tables>
		<table>#__attached_files</table>
	</tables>
</extension>
